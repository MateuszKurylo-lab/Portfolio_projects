    "def add(x,y):\n",
    "    return x + y\n",
    "\n",
    "def subtrack(x,y):\n",
    "    return x - y\n",
    "\n",
    "def multiply(x,y):\n",
    "    return x * y\n",
    "\n",
    "def divide(x,y):\n",
    "    return x / y\n",
    "\n",
    "def percentage(x,y):\n",
    "    return (x / y)*100"
